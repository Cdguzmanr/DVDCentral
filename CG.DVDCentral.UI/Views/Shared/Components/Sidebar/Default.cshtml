@model IEnumerable<CG.DVDCentral.BL.Models.Genre>
<ul>

    <!-- --- Side Bar Design (html) --- -->

    @foreach (var genre in Model)
    {
        // Insert each Movie Genre (C#)
        <li>
            <a asp-controller="Movie"
               asp-action="Browse"
               asp-route-id="@genre.Id">@genre.Description</a>

        </li>
    }

    <!-- Login -->
    <!-- (Now in NavBar)-->

    <!-- All movies -->
    <li><a asp-controller="Movie" asp-action="Index">All Genres</a></li>


</ul>

