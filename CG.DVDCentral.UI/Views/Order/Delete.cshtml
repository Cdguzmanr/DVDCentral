@model CG.DVDCentral.UI.ViewModels.OrderVM

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div class="m-2">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CustomerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.CustomerId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.UserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.ShipDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.ShipDate)
        </dd>
    </dl>

    <!-- Order Item Table -->
    <h4>Order Items</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Movie Id</th>
                <th>Cost</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in Model.OrderItems)
            {
                <tr>
                    <td>@orderItem.OrderId</td>
                    <td>@orderItem.MovieId</td>
                    <td>@orderItem.Cost</td>
                    <td>@orderItem.Quantity</td>
                </tr>
            }
        </tbody>
    </table>


    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
