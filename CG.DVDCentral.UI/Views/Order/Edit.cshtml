@model CG.DVDCentral.UI.ViewModels.OrderVM

@{
    ViewData["Title"] = "Edit";
}

<div class="row m-2">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Display Order properties -->
            <div class="form-group">
                <label asp-for="Order.Id" class="control-label"></label>
                <input asp-for="Order.Id" class="form-control" />
                <span asp-validation-for="Order.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.CustomerId" class="control-label"></label>
                <input asp-for="Order.CustomerId" class="form-control" />
                <span asp-validation-for="Order.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.OrderDate" class="control-label"></label>
                <input asp-for="Order.OrderDate" class="form-control" />
                <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.UserId" class="control-label"></label>
                <input asp-for="Order.UserId" class="form-control" />
                <span asp-validation-for="Order.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.ShipDate" class="control-label"></label>
                <input asp-for="Order.ShipDate" class="form-control" />
                <span asp-validation-for="Order.ShipDate" class="text-danger"></span>
            </div>

            <!-- Order Item Table -->
            <h4>Order Items</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Order Id</th>
                        <th>Movie Id</th>
                        <th>Cost</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderItem in Model.OrderItems)
                    {
                        <tr>
                            <td>@orderItem.OrderId</td>
                            <td>@orderItem.MovieId</td>
                            <td>@orderItem.Cost</td>
                            <td>@orderItem.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="m-2">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
